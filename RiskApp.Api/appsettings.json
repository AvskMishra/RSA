{
  "ConnectionStrings": {
    "Default": "Data Source=riskapp.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "OpenTelemetry": {
    "Enable": true,
    "Exporters": {
      "Console": true,
      "Otlp": false,
      "OtlpEndpoint": "http://localhost:4317"
    },
    "AllowedHosts": "*"
  },
  "Jwt": {
    "Issuer": "RiskApp",
    "Audience": "RiskApp.Api",
    "Key": "CHANGE_ME_SUPER_SECRET_256BIT_MIN",
    "ExpiryMinutes": 60
  },
  "AuthSeeding": {
    "Enabled": false,
    "DefaultPassword": "Demo#123",
    "Roles": [ "Reader", "Writer" ],
    "Users": [
      {
        "Email": "reader@demo.local",
        "DisplayName": "reader",
        "Role": "Reader"
      },
      {
        "Email": "writer@demo.local",
        "DisplayName": "writer",
        "Role": "Writer"
      }
    ]
  },
  "Messaging": {
    "Transport": "InMemory", // InMemory | RabbitMq | AzureServiceBus
    "RabbitMq": {
      "Host": "localhost",
      "Username": "guest",
      "Password": "guest",
      "VirtualHost": "/"
    },
    "AzureServiceBus": {
      "ConnectionString": "Endpoint=sb://<yournamespace>.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=..."
    },
    "QueueNames": {
      "ExternalChecks": "risk.external-checks"
    }
  }
}